# This is an example file. Copy this to .env.local and fill in your actual values.
# Do not commit .env.local to your repository.

# MongoDB Connection String
# Get this from your MongoDB Atlas dashboard
MONGODB_URI="your_mongodb_connection_string"

# NextAuth.js Configuration
# You can generate a secret with `openssl rand -base64 32` in your terminal
AUTH_SECRET="your_auth_secret_here"
AUTH_URL="http://localhost:3000"

# Google Auth Provider (Optional)
# Get these from your Google Cloud Console for OAuth 2.0
AUTH_GOOGLE_ID="your_google_client_id"
AUTH_GOOGLE_SECRET="your_google_client_secret"
